{{>layout/header}}
<!-- 바디 start -->
<main class="main-size">
    <div class="row justify-content-end mb-3">
        <div class="col-md-4">
            <form action="/" method="get" class="form-inline">
                <div class="input-group rounded">
                    <input class="form-control me-2 rounded-end" type="text" placeholder="기업,채용정보를 입력하세요"
                           name="keyword" required/>
                    <a href="#" class="text-body"><i class="fa-solid fa-magnifying-glass icon-search"></i></a>
                </div>
            </form>
        </div>
    </div>
    <!-- 광고 창 start -->
    <div class="div-container">
        <section class="section-body">
            <div class="div-ad-img1"></div>
        </section>
        <!-- 광고 창 end -->
        <!-- 바디 start -->
        <section class="section-body">
            <div class="div-recommendation mb-20">추천 채용 정보</div>
            <div class="div-recommendation-img">
                <div>
                    <div class="div-recommendation-img-1"></div>
                    <div class="div-recommendation-text-1">IT,컨텐츠
                        <span><a href="/board/1" class="text-body"><i class="fa-regular fa-star"></i></a></span>
                    </div>
                    <div class="div-recommendation-text-2">아이헤이트플라잉버그스</div>
                </div>
                <div>
                    <div class="div-recommendation-img-2"></div>
                    <div class="div-recommendation-text-1">제조
                        <span><a href="/board/1" class="text-body"><i class="fa-regular fa-star"></i></a></span>
                    </div>
                    <div class="div-recommendation-text-2">한솔테크닉스</div>
                </div>
                <div>
                    <div class="div-recommendation-img-3"></div>
                    <div class="div-recommendation-text-1">IT,컨텐츠
                        <span><a href="/board/1" class="text-body"><i class="fa-regular fa-star"></i></a></span>
                    </div>
                    <div class="div-recommendation-text-2">대보정보통신</div>
                </div>
            </div>
        </section>
        <hr>
        <div class="container mt-3">
            <div class="dropdown">
                <button type="button" class="btn btn-outline-dark" data-bs-toggle="dropdown">
                    기술을 선택하세요
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" name="keyword" href="?keyword=java">java</a></li>
                    <li><a class="dropdown-item" name="keyword" href="?keyword=javaScript">javasSript</a></li>
                    <li><a class="dropdown-item" name="keyword" href="?keyword=Spring">Spring</a></li>
                    <li><a class="dropdown-item" name="keyword" href="?keyword=HTML">HTML</a></li>
                    <li><a class="dropdown-item" name="keyword" href="?keyword=jQuery">jQuery</a></li>
                    <li><a class="dropdown-item" name="keyword" href="?keyword=MySQL">MySQL</a></li>
                </ul>
            </div>
            <br>
            <div class="div-recommendation mb-20">채용 정보</div>
            <table class="table">
                <th>지역</th>
                <th>회사명</th>
                <th>공고 제목</th>
                <th>급여 정보</th>
                <th>마감일</th>
                {{#boardList.content}}
                    <tr>
                        <td>{{address}}</td>
                        <td><a href="/boards/{{id}}" class="text-body">{{businessName}}</a></td>
                        <td><a href="/boards/{{id}}" class="text-body">{{title}}</a></td>
                        <td>{{salary}}</td>
                        <td>{{closingDate}}</td>
                    </tr>
                {{/boardList.content}}
            </table>
            <div class="d-flex justify-content-center">
                {{#boardList}}
                <ul class="pagination">
                    {{#hasPrevious}}
                        <li class="page-item disabled"><a class="page-link" href="/boards/listings?page={{number - 1}}">Previous</a></li>
                    {{/boardList.hasPrevious}}
                    {{#boardList.isFirst}}
                        <li class="page-item"><a class="page-link" href="/boards/listings?page=0">First</a></li>
                    {{/boardList.isFirst}}
                    {{#boardList.isLast}}
                        <li class="page-item"><a class="page-link" href="/boards/listings?page={{totalPages - 1}}
                            ">Last</a></li>
                    {{/boardList.isLast}}
                    {{#boardList.hasNext}}
                        <li class="page-item disabled"><a class="page-link" href="/boards/listings?page={{number + 1}}
                            ">Next</a></li>
                    {{/boardList.hasNext}}
                </ul>
                {{/boardList}}
            </div>
        </div>
    </div>
</main>
<!-- 바디 end -->
{{>layout/footer}}