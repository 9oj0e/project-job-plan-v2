{{>layout/header}}
{{#resumeDetail}}
    <div class="modal fade" id="updateForm" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/resumes/{{id}}/update" method="post">
                    <div class="modal-header card-title">
                        <h2>이력서 수정</h2>
                    </div>
                    <div class="modal-body">
                        <h4>이력서 내용</h4>
                        <hr>
                        <table class="table mb-5">
                            <tr>
                                <td>제목</td>
                                <td>
                                    <input name="title" type="text" value="{{title}}" readonly class="form-control">
                                </td>
                            </tr>
                            <tr>
                                <td>자기소개서</td>
                                <td style="width: 415px">
                                <textarea name="content" class="form-control"
                                          style="height: 300px">{{content}}</textarea>
                                </td>
                            </tr>
                            <tr>
                                <td>경력 정보</td>
                                <td style="width: 415px">
                                    <textarea name="career" class="form-control"
                                              style="height: 100px">{{career}}</textarea>
                                </td>
                            </tr>
                        </table>
                        <h4>보유 스킬</h4>
                        <div class="form-control mb-5">
                            {{#skillList}}
                                <btn class="btn btn-light">{{skillName}}</btn>
                            {{/skillList}}
                            {{^skillList}}
                                <btn class="btn btn-outline-light form-control">없음</btn>
                            {{/skillList}}
                        </div>
                        {{#sessionUser}}
                            <h4>개인 정보</h4>
                            <hr>
                            <table class="table mb-5">
                                <tr>
                                    <td>이름</td>
                                    <td>
                                        {{name}}
                                    </td>
                                </tr>
                                <tr>
                                    <td>생년월일</td>
                                    <td>
                                        {{birthdate}}
                                    </td>
                                </tr>
                                <tr>
                                    <td>휴대전화</td>
                                    <td>
                                        {{phoneNumber}}
                                    </td>
                                </tr>
                                <tr>
                                    <td>이메일</td>
                                    <td>
                                        {{email}}
                                    </td>
                                </tr>
                                <tr>
                                    <td>주소</td>
                                    <td>
                                        {{address}}
                                    </td>
                                </tr>
                            </table>
                            <h4>학력 정보</h4>
                            <hr>
                            <table class="table mb-5">
                                <tr>
                                    <td>학력</td>
                                    <td>
                                        {{educationLevel}}
                                    </td>
                                </tr>
                                <tr>
                                    <td>학교명</td>
                                    <td>
                                        {{schoolName}}
                                    </td>
                                </tr>
                                <tr>
                                    <td>전공</td>
                                    <td>
                                        {{major}}
                                    </td>
                                </tr>
                            </table>
                        {{/sessionUser}}
                    </div>
                    <div class="modal-footer">
                        <div class="button-post-cancel">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">취소</button>
                            <button type="submit" class="btn btn-outline-dark">수정</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/resumeDetail}}
<!-- 바디 start -->
<div class="div-card-container">
    {{#resumeDetail}}
        <div class="sidenav-container">
            <div class="sidenav">
                <!-- 수정 삭제 버튼 -->
                {{#isResumeOwner}}
                    <div class="mb-3"> <!-- 수정 하기 -->
                        <button class="btn btn-warning" data-bs-toggle="modal"
                                data-bs-target="#updateForm">
                            <i class="fa-regular fa-file-word icon-size"></i>
                        </button>
                    </div>
                    <div class="mb-3"> <!-- 삭제 하기 -->
                        <form action="/resumes/{{id}}/delete" method="post">
                            <button class="btn btn-danger">
                                <i class="fa-regular fa-trash-can icon-size"></i>
                            </button>
                        </form>
                    </div>
                {{/isResumeOwner}}
                {{^isResumeOwner}}
                    <!-- 구독하기 버튼 -->
                    {{#sessionUser.isEmployer}}
                        {{^hasSubscribed}}
                            <div class="mb-3"> <!-- 구독하기 -->
                                <form action="/resumes/{{id}}/subscribe" method="post">
                                    <button class="btn btn-outline-dark">
                                        <i class="fa-regular fa-bookmark icon-size"></i>
                                    </button>
                                </form>
                            </div>
                        {{/hasSubscribed}}
                        {{#hasSubscribed}}
                            <div class="mb-3"> <!-- 구독 취소 -->
                                <form action="/resumes/{{id}}/unsubscribe" method="post">
                                    <input type="hidden" name="fromSubscription" value="false">
                                    <button class="btn btn-outline-dark">
                                        <i class="fa-solid fa-bookmark icon-size"></i>
                                    </button>
                                </form>
                            </div>
                        {{/hasSubscribed}}
                    {{/sessionUser.isEmployer}}
                {{/isResumeOwner}}
            </div>
        </div>
        <div class="card div-card">
            <div class="card-header card-title">
                <h3>{{title}}</h3>
            </div>
            <div class="card-body" style="margin-left: 5%; margin-right: 5%">
                <h4 class="card-title">자기소개서</h4>
                <div class="form-control mb-3" style="height: 300px">{{content}}</div>
                <h4 class="card-title">경력 정보</h4>
                <div class="form-control mb-3" style="height: 100px">{{career}}</div>
                <h4 class="card-title">보유 스킬</h4>
                <div class="form-control mb-3">
                    {{#skillList}}
                        <btn class="btn btn-light">{{skillName}}</btn>
                    {{/skillList}}
                    {{^skillList}}
                        <btn class="btn btn-outline-light form-control">없음</btn>
                    {{/skillList}}
                </div>
                <h4 class="card-title">개인 정보</h4>
                <table class="table">
                    <tr>
                        <td>학교명</td>
                        <td>{{schoolName}}</td>
                    </tr>
                    {{#major}}
                        <tr>
                            <td>전공</td>
                            <td>{{major}}</td>
                        </tr>
                    {{/major}}
                    <tr>
                        <td>졸업형태</td>
                        <td>{{educationLevel}}</td>
                    </tr>
                    <tr>
                        <td>이름</td>
                        <td>{{name}}</td>
                    </tr>
                    <tr>
                        <td>나이</td>
                        <td>{{birthdate}}년 생</td>
                    </tr>
                    <tr>
                        <td>주소</td>
                        <td>{{address}}</td>
                    </tr>
                </table>
            </div>
            <div class="card-footer">
                <table class="table table-borderless">
                    <tr>
                        <td style="background-color: transparent; text-align: end">전화</td>
                        <td style="background-color: transparent">{{phoneNumber}}</td>
                        <td style="background-color: transparent; text-align: end">이메일</td>
                        <td style="background-color: transparent">{{email}}</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="sidenav-container">
            <div class="sidenav">
                <div class="card" style="width:200px">
                    <div class="card-body" style="padding-left: 0; padding-right: 0">
                        <div class="card-title">
                            {{#rating}}
                                <table class="table">
                                    <tr>
                                        <td style="text-align: end; padding-bottom: 0; padding-top: 0">평점 ⭐</td>
                                        <td style="text-align: start; padding-bottom: 0; padding-top: 0">{{rating}}</td>
                                    </tr>
                                </table>
                            {{/rating}}
                        </div>
                        {{#userPic}}
                            <img class="card-img" src="/upload/{{userPic.imgFilename}}" style="width:100%">
                        {{/userPic}}
                        {{^userPic}}
                            <img class="card-img" src="../images/avatar.png" alt="Card image" style="width:100%">
                        {{/userPic}}
                        <h4 class="card-title text-center">{{name}}</h4>
                    </div>
                    <div class="card-footer" style="text-align: center;">
                        {{#sessionUser.isEmployer}}
                            {{^hasRated}}
                                <form action="/resumes/{{id}}/rate" method="post">
                                    <div>
                                        <select name="rating" style="text-align: center; width: 100%">
                                            <option value="1">1점</option>
                                            <option value="2">2점</option>
                                            <option value="3">3점</option>
                                            <option value="4">4점</option>
                                            <option value="5">5점</option>
                                        </select>
                                        <div align="right">
                                            <button class="btn btn-outline-dark btn-sm"
                                                    style="width: 100%; margin-top: 5px">
                                                평가하기
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            {{/hasRated}}
                            <!-- 제안하기 버튼 -->
                            <div class="mt-3">
                                <form action="/resumes/{{id}}/offer-form" method="get">
                                    <button class="btn btn-primary form-control">제안</button>
                                </form>
                            </div>
                        {{/sessionUser.isEmployer}}
                    </div>
                </div>
            </div>
        </div>
    {{/resumeDetail}}
</div>
<!-- 바디 end -->
{{>layout/footer}}