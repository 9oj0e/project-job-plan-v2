{{>layout/header}}
<style>
    th {
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>
<main class="main-size">
    <div class="row justify-content-end mb-3">
        <div class="col-md-4">
            <form action="/" method="get" class="form-inline">
                <div class="input-group rounded">
                    <input class="search-box form-control me-2 rounded-end" type="text" placeholder="기업,채용정보를 입력하세요"
                           name="keyword" required/>
                    <a href="#" class="text-body"><i class="fa-solid fa-magnifying-glass icon-search"></i></a>
                </div>
            </form>
        </div>
    </div>
<div>
    <!-- 바디 start -->
    {{#sessionUser.isEmployer}}
        <h2 style="text-align: center">이력서 구독 정보</h2>
        <hr>
        <table class="table">
            <tr>
                <th>생년월일</th>
                <th>이름</th>
                <th style="text-align: start">이력서 제목</th>
                <th>EMAIL</th>
                <th></th>
            </tr>
            {{#subscription}}
                {{#page.content}}
                    <tr>
                        <td>{{birthdate}}</td>
                        <td>{{resumeUserName}}</td>
                        <td style="text-align: start">
                            <a href="/resumes/{{resumeId}}">{{title}}</a>
                        </td>
                        <td>{{email}}</td>
                        <td>
                            <form action="/resumes/{{resumeId}}/unsubscribe" method="post">
                                <input type="hidden" name="fromSubscription" value="true">
                                <button class="btn btn-danger">구독 취소</button>
                            </form>
                        </td>
                    </tr>
                {{/page.content}}
            {{/subscription}}
        </table>
        <div class="d-flex justify-content-center">
            <ul class="pagination">
                <li class="page-item disabled"><a class="page-link" href="?page=#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="?page=#">1</a></li>
                <li class="page-item disabled"><a class="page-link" href="?page=#">Next</a></li>
            </ul>
        </div>
    </div>
    {{/sessionUser.isEmployer}}
    {{^sessionUser.isEmployer}}
        <h2 style="text-align: center">공고 구독 정보</h2>
        <hr>
        <table class="table">
            <tr>
                <th>지역</th>
                <th>회사명</th>
                <th style="text-align: start">공고 정보</th>
                <th>급여 정보</th>
                <th>마감일</th>
                <th></th>
            </tr>
            {{#subscription}}
                {{#page.content}}
                    <tr>
                        <td>{{address}}</td>
                        <td>{{businessName}}</td>
                        <td style="text-align: start">
                            <div class="div-recommendation-text-1">채용 분야 : {{field}}</div>
                            <a href="/boards/{{boardId}}" class="div-recommendation-text-2">{{title}}</a>
                        </td>
                        <td>{{salary}}</td>
                        <td>{{closingDate}}</td>
                        <td>
                            <form action="/boards/{{boardId}}/unsubscribe" method="post">
                                <input type="hidden" name="fromSubscription" value="true">
                                <button class="btn btn-danger">구독 취소</button>
                            </form>
                        </td>
                    </tr>
                {{/page.content}}
            {{/subscription}}
        </table>
        <div class="d-flex justify-content-center">
            <ul class="pagination">
                <li class="page-item {{^subscription.page.hasPrevious}}disabled{{/subscription.page.hasPrevious}}">
                    <a class="page-link" href="?page={{subscription.page.pageable.previousOrFirst.pageNumber}}
                    ">Previous</a>
                </li>
                {{#subscription.pageList}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{.}}">{{.}}</a>
                    </li>
                {{/subscription.pageList}}
                <li class="page-item {{^subscription.page.hasNext}}disabled{{/subscription.page.hasNext}}">
                    <a class="page-link" href="?page={{subscription.page.pageable.next.pageNumber}}">Next</a>
                </li>
            </ul>
        </div>
        </div>
    {{/sessionUser.isEmployer}}
    <!-- 바디 end -->
</main>

{{>layout/footer}}