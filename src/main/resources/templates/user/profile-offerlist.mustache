{{^isEmployer}}
    <div class="div-layout">
        <div class="div-header d-flex justify-content-between" style="text-align: end">
            <h2><b>받은 제안</b></h2>
            <form action="/users/{{sessionUser.id}}/resumes" method="get" class="justify-content-end">
                <button class="btn btn-primary">전체</button>
            </form>
        </div>
        <div class="div-resume">
            <table class="table table-hover" style="text-align: center">
                <tr>
                    <th>이력서 제목</th>
                    <th>회사명</th>
                    <th>공고 제목</th>
                    <th></th>
                </tr>
                {{#offerList}}
                    <tr>
                        <td><a href="/resumes/{{resumeId}}">{{title}}</a></td>
                        <td>{{businessName}}</td>
                        <td><a href="/boards/{{boardId}}">{{boardTitle}}</a></td>
                        <td>
                            <div style="display: flex; justify-content: space-evenly">
                                {{#status}}
                                    <div>{{status}}</div>
                                {{/status}}
                                {{^status}}
                                    <input type="hidden" id="offerId" value="{{id}}">
                                    <form id="acceptForm" action="/offer/update" method="post">
                                        <input name="status" type="hidden" value="1">
                                        <input name="id" id="statusInput" type="hidden">
                                        <button class="btn btn-primary" onclick="setAcceptStatus()">
                                            수락
                                        </button>
                                    </form>
                                    <form id="rejectForm" action="/offer/update" method="post">
                                        <input name="status" type="hidden" value="0">
                                        <input name="id" id="statusInput" type="hidden">
                                        <button class="btn btn-outline-danger" onclick="setRejectStatus()">
                                            거절
                                        </button>
                                    </form>
                                    <script>
                                        function setAcceptStatus() {
                                            let inputValue = document.getElementById("offerId").value;
                                            let statusInput = document.getElementById("statusInput");
                                            statusInput.value = inputValue;
                                            document.getElementById("acceptForm").submit();
                                        }

                                        function setRejectStatus() {
                                            let inputValue = document.getElementById("offerId").value;
                                            let statusInput = document.getElementById("statusInput");
                                            statusInput.value = inputValue;
                                            document.getElementById("rejectForm").submit();
                                        }
                                    </script>
                                {{/status}}
                            </div>
                        </td>
                    </tr>
                {{/offerList}}
            </table>
        </div>
    </div>
{{/isEmployer}}
