                <th></th>
            </tr>
            {{#offerList}}
                <tr>
                    <td><a href="/boards/{{boardId}}">{{boardTitle}}</a></td>
                    <td>{{username}}</td>
                    <td><a href="/resumes/{{resumeId}}">{{resumeTitle}}</a></td>
                    <td>{{createdAt}}</td>
